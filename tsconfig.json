{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "declarationMap": false,
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "preserveSymlinks": true
  },
  "include": ["**/.vuepress/**/*", "packages/**/*"],
  "exclude": ["node_modules", ".temp", "lib", "dist"]
}
